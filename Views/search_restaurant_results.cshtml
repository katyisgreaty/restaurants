@{
    Layout="Shared/_Layout.cshtml";
}

@* @if (@Model.Count == 0)
{
  <p>We didn't find any restaurants matching your search!</p>
} *@
else
{
  <h1>Here is a list of matching restaurants:</h1>
  <ul>
    @foreach (var restaurant in Model)
    {
      <a href="/restaurant/@Model["restaurant"].GetId()"><li>@restaurant.GetName() @restaurant.GetPrice() @restaurant.GetVibe()</li></a>
    }
  </ul>
}
